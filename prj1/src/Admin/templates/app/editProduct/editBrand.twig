{% extends '@layout/adminLayout.twig' %}

{% block title %}admin add brand page{% endblock %}

{% block content %}

    <div class="content-wrapper">
        <div class="container-fluid">


            <div class="loader-wrapper">
                <div class="lds-ring">
                    <div></div>
                    <div></div>
                    <div></div>
                    <div></div>
                </div>
            </div>
            <div class="card card-authentication1 mx-auto my-5">
                <div class="card-body">
                    <div class="card-content p-2">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-title">add your brand</div>
                                <hr>
                                <form method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <input type="hidden" name="id" value="{{ brand.id }}">
                                        <label for="name">Name</label>
                                        <input value="{{ brand.name }}" type="text" class="form-control" name="name" id="name"
                                               placeholder="Enter Your Name">
                                    </div>

                                    <div class="form-group">
                                        <label for="logo">logo</label>
                                        <div>
                                            <img src="/adminAsset/img/{{ brand.logo }}"
                                                 style="width: 50px; height: 50px">
                                        </div>
                                        <br>
                                        <input type="file" class="form-control" name="image" id="logo">
                                    </div>
                                    <div class="form-group">
                                        <label for="url">url</label>
                                        <input value="{{ brand.url }}" type="url" class="form-control" name="url" id="url"
                                               placeholder="Enter Your url">
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-light px-5"><i class="icon-lock"></i> update
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% endblock %}
    {% block javascript %}
    //<script src="/adminAsset/js/adminAddBrand.js"></script>
{% endblock %}